                    $.each(data.icerikler, function (i) {
                        $("#bld").append('<li><a href="../' + data.icerikler[i].link + '"><div class="notification-message"><span id="bldIcerik">' + data.icerikler[i].icerik + '</span><span class="time" id="bldTime">' + data.icerikler[i].tarih + '</span></div> </a></li>');
                    });
                });
            }

            BildirimCek();

            var otomatik_yenile = setInterval(function () {
                BildirimCek();
            }, 60000);

            $("#bildirimOku").click(function () {
