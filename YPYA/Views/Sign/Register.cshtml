
@{
    ViewBag.Title = "Hesap oluştur";
    Layout = "~/Views/Shared/_SignLayout.cshtml";
}

<div class="card card-block form-layout">
    <form role="form" action="index.html" id="validate">
        <div class="text-xs-center m-b-3">
            <img src="~/Content/images/logo-icon.png" height="80" alt="" class="m-b-1" />
            <h5>
                Şimdi hesap oluştur
            </h5>
            <p class="text-muted">
                Bir hesap aç ve projeni yönetmeye başla
            </p>
        </div>
        <fieldset class="form-group">
            <label for="email">
                Kullanıcı adı girin
            </label>
            <input type="email" class="form-control form-control-lg" id="email" placeholder="Kullanıcı adı" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="email">
                Eposta adresi girin
            </label>
            <input type="email" class="form-control form-control-lg" id="email" placeholder="Eposta adresi" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="password">
                Şifre girin
            </label>
            <input type="password" class="form-control form-control-lg" id="password" placeholder="Şifre" required minlength="6" />
        </fieldset>
        <fieldset class="form-group">
            <label for="cpassword">
                Şifreyi tekrar girin
            </label>
            <input type="password" class="form-control form-control-lg" id="cpassword" placeholder="Şifre(tekrar)" required minlength="6" />
        </fieldset>
        <button class="btn btn-primary btn-block btn-lg" type="submit">
            Hesap Oluştur
        </button>
        <div class="divider">
            <span>
                yada
            </span>
        </div>
        <div class="text-xs-center">
            <p>
                Sosyal hesapları kullanarak giriş yap
            </p>
            <button href="javascript:;" class="btn btn-icon-icon btn-facebook btn-lg m-b-1 m-r-1">
                <i class="fa fa-facebook">
                </i>
            </button>
            <button href="javascript:;" class="btn btn-icon-icon btn-github btn-lg m-b-1 m-r-1">
                <i class="fa fa-github">
                </i>
            </button>
            <button href="javascript:;" class="btn btn-icon-icon btn-google btn-lg m-b-1 m-r-1">
                <i class="fa fa-google-plus">
                </i>
            </button>
            <button href="javascript:;" class="btn btn-icon-icon btn-linkedin btn-lg m-b-1 m-r-1">
                <i class="fa fa-linkedin">
                </i>
            </button>
        </div>
    </form>
</div>

@section footer{
    <p>
        <a href="~/Sign/ForgotPassword">
            Şifreni mi unuttun?
        </a>
        &nbsp;&nbsp;·&nbsp;&nbsp;
        <a href="~/Sign/Login">
            Zaten bir hesabım var
        </a>
    </p>
}
